# SIMA Environment Configuration
# Copy to .env and fill in values

# Database
DATABASE_URL=postgresql+asyncpg://sima:sima_dev@localhost:5432/sima

# AWS (LocalStack for local dev)
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
SQS_QUEUE_URL=http://localhost:4566/000000000000/sima-ingest-queue
S3_BUCKET=sima-events-dev

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_EXTERNAL_CHAT_ID=
TELEGRAM_CONSCIOUS_CHAT_ID=
TELEGRAM_SUBCONSCIOUS_CHAT_ID=

# LLM
LLM_PRIMARY_PROVIDER=openai
LLM_PRIMARY_MODEL=gpt-4o
LLM_FAST_PROVIDER=openai
LLM_FAST_MODEL=gpt-4o-mini
OPENAI_API_KEY=

# Cognitive Parameters
RECURRENCE_STEPS=3
WORKSPACE_CAPACITY_K=7
MINUTE_TICK_ENABLED=false
AUTONOMOUS_TICK_ENABLED=false
TIMEZONE=UTC

# API
LAB_PASSWORD=
JWT_SECRET=dev-secret-change-in-production

# Debug
DEBUG=false
DATABASE_ECHO=false
