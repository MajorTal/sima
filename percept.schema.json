{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Percept",
  "type": "object",
  "required": ["summary", "recurrence", "stability_score"],
  "properties": {
    "summary": {
      "type": "string",
      "description": "What is happening right now"
    },
    "representation": {
      "type": "object",
      "description": "Structured understanding - Sima decides the structure"
    },
    "recurrence": {
      "type": "array",
      "description": "Refinement steps",
      "items": {
        "type": "object",
        "properties": {
          "delta_summary": {
            "type": "string",
            "description": "What changed in this iteration"
          }
        }
      }
    },
    "stability_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "How stable is the representation after recurrence"
    },
    "suppress_output": {
      "type": "boolean",
      "default": false,
      "description": "True if there's nothing worth saying externally"
    }
  }
}
