{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WorkspaceState",
  "type": "object",
  "additionalProperties": false,
  "required": ["workspace_summary", "items", "current_goal", "next_actions", "broadcast_message", "external_draft"],
  "properties": {
    "workspace_summary": { "type": "string" },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "content", "why_in_workspace"],
        "properties": {
          "id": { "type": "string" },
          "content": { "type": "string" },
          "why_in_workspace": { "type": "string" }
        }
      }
    },
    "current_goal": { "type": "string" },
    "next_actions": { "type": "array", "items": { "type": "string" } },
    "broadcast_message": { "type": "string" },
    "external_draft": { "type": "string" }
  }
}
