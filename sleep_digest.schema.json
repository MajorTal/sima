{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SleepDigest",
  "type": "object",
  "additionalProperties": false,
  "required": ["date_range", "trace_digests", "semantic_memory_updates", "open_questions", "goal_updates"],
  "properties": {
    "date_range": { "type": "string" },
    "trace_digests": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["trace_id", "topic", "digest"],
        "properties": {
          "trace_id": { "type": "string" },
          "topic": { "type": "string" },
          "digest": { "type": "string" }
        }
      }
    },
    "semantic_memory_updates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["claim", "confidence", "provenance_event_ids"],
        "properties": {
          "claim": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "provenance_event_ids": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "open_questions": { "type": "array", "items": { "type": "string" } },
    "goal_updates": { "type": "array", "items": { "type": "string" } }
  }
}
